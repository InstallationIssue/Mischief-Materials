// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Foundation {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  setting         String
}

model Scenario {
  id              Int         @id @default(autoincrement())
  name            String      @unique
  description     String       
}

model Location {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  description     String
  color           String    @default("#")
}

model Character {
  id                Int       @id @default(autoincrement())
  name              String    
  background        String
  xp                Int       @default(0)
  level             Int       @default(1)
  health_max        Int       @default(4)
  health_lost       Int       @default(0)
  armor             Int       @default(6)
  str               Int       @default(0)
  dex               Int       @default(0)
  wil               Int       @default(0)
  physical_features String    @default("")
  npc               Boolean   @default(true)
}

model Monster {
  id              Int         @id @default(autoincrement())
  name            String    
  background      String
  health_max      Int         @default(4)
  health_lost     Int         @default(0)
  armor           Int         @default(6)
  str             Int         @default(0)
  dex             Int         @default(0)
  wil             Int         @default(0)
  size            String      @default("Typical")
  attack          Int         @default(0)
}

model Item {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  description     String
  value           Int       @default(100)
}

model Spell {
  id              Int       @id @default(autoincrement())
  name            String    
  description     String
  magic           Magic     @relation(fields: [magicId], references: [id])
  magicId         Int
}

model Magic {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  description     String
  spells          Spell[]
}
