// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Scenario {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  description     String    @default("")
  image           String    @default("")
  locations       Location[]
  characters      Character[]
  encounters      Encounter[]
  items           Item[]
  magic           Magic[]
}

model Location {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  description     String    @default("")
  color           String    @default("#D9D9D9")
  icon            String    @default("")
  scenarios       Scenario[]
}

model Character {
  id                Int       @id @default(autoincrement())
  name              String    @unique
  background        String    @default("")
  xp                Int       @default(0)
  level             Int       @default(1)
  health_max        Int       @default(4)
  health_lost       Int       @default(0)
  armor             Int       @default(6)
  str               Int       @default(0)
  dex               Int       @default(0)
  wil               Int       @default(0)
  physical_features String    @default("")
  npc               Boolean   @default(true)
  scenarios       Scenario[]
}

model Monster {
  id              Int         @id @default(autoincrement())
  name            String      @unique
  background      String      @default("")
  health_max      Int         @default(4)
  armor           Int         @default(6)
  str             Int         @default(0)
  dex             Int         @default(0)
  wil             Int         @default(0)
  size            String      @default("Typical")
  attack          Int         @default(0)
  encounter       EncounterInstance[] 
  encounterId     Int         @default(0)
}

model EncounterInstance {
  id              Int         @id @default(autoincrement())
  monster         Monster     @relation(fields: [monsterId], references: [id])
  monsterId       Int
  encounter       Encounter   @relation(fields: [encounterId], references: [id])
  encounterId     Int
  health_lost     Int         @default(0)
}

model Encounter {
  id              Int         @id @default(autoincrement())
  name            String      @unique @default("")
  monsters        EncounterInstance[]
  scenarios       Scenario[]
}

model Item {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  description     String    @default("")
  value           Int       @default(100)
  scenarios       Scenario[]
}

model Spell {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  description     String    @default("")
  magic           Magic     @relation(fields: [magicId], references: [id])
  magicId         Int
}

model Magic {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  description     String    @default("")
  medium          String    @default("")
  spells          Spell[]
  scenarios       Scenario[]
}
