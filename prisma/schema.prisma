// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Foundation {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  setting         String
  scenarios       Scenario[]
}

model Scenario {
  id              Int         @id @default(autoincrement())
  name            String      @unique
  description     String
  foundation      Foundation  @relation(fields: [foundationId], references: [id])
  foundationId    Int         @unique
}

model Location {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  description     String
}

model Character {
  id                Int       @id @default(autoincrement())
  name              String    
  background        String
  xp                Int       @default(0)
  level             Int       @default(1)
  health_max        Int       @default(4)
  health_lost       Int       @default(0)
  armor             Int       @default(6)
  str               Int       @default(0)
  dex               Int       @default(0)
  wil               Int       @default(0)
  physical_features String    @default("")
  npc               Boolean   @default(true)
}

model Monster {
  id              Int       @id @default(autoincrement())
  health_max      Int
  health_lost     Int
  armor           Int
  str             Int
  dex             Int
  wil             Int
  power           Int
  size            String
  attack          Int
}

model Item {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  description     String
}

model Magic {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  description     String
}