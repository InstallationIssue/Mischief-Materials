// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Campaign {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  description     String
  map             String
  locations       Location[]
  npcs            Npc[]
  monsters        Monster[]
  characters      Character[]
}

model Location {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  description     String
  campaign        Campaign  @relation(fields: [campaignId], references: [id])
  campaignId      Int       @unique
}

model Item {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  description     String
  value           Int
  character       Character  @relation(fields: [characterId], references: [id])
  characterId      Int       @unique
}

model Creature {
  id              Int       @id @default(autoincrement())
  name            String    @unique
  description     String
  health_max      Int
  health_lost     Int
  armor           Int
  str             Int
  dex             Int
  wil             Int
  character       Character?
  monster         Monster?
  spells          Spell[]
}

model Character {
  id              Int       @id @default(autoincrement())
  xp              Int
  level           Int
  background      String
  appearance      String
  physical_detail String
  clothing        String
  personality     String
  mannerism       String
  creature        Creature  @relation(fields: [creatureId], references: [id])
  creatureId      Int       @unique
  campaign        Campaign  @relation(fields: [campaignId], references: [id])
  campaignId      Int       @unique
  npc             Npc?
  items           Item[]
}

model Spell {
  id              Int       @id @default(autoincrement())
  name            String
  description     String
  spellFormula    String
  creature        Creature  @relation(fields: [creatureId], references: [id])
  creatureId      Int       @unique
}

model Monster {
  id              Int       @id @default(autoincrement())
  power           Int
  size            String
  attack          Int
  creature        Creature  @relation(fields: [creatureId], references: [id])
  creatureId      Int       @unique
  campaign        Campaign  @relation(fields: [campaignId], references: [id])
  campaignId      Int       @unique
}

model Npc {
  id              Int       @id @default(autoincrement())
  asset           String
  liability       String
  goal            String
  misfortune      String
  mission         String
  method          String
  character       Character @relation(fields: [characterId], references: [id])
  characterId     Int       @unique
  campaign        Campaign  @relation(fields: [campaignId], references: [id])
  campaignId      Int       @unique
}