// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Scenario {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  setting     String      @default("")
  description String      @default("")
  image       String      @default("Default")
  threads     Thread[]
  events      Event[]
  locations   Location[]
  characters  Character[]
  encounters  Encounter[]
  items       Item[]
  magic       Magic[]
}

model Thread {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String
  scenario    Scenario @relation(fields: [scenario_id], references: [id])
  scenario_id Int
}

model Location {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  description String     @default("")
  color       String     @default("#D9D9D9")
  icon        String     @default("")
  scenarios   Scenario[]
}

model Event {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String
  scenario    Scenario @relation(fields: [scenario_id], references: [id])
  scenario_id Int
}

model Character {
  id              Int            @id @default(autoincrement())
  name            String         @unique
  background      String         @default("")
  xp              Int            @default(0)
  level           Int            @default(1)
  health_max      Int            @default(4)
  health_lost     Int            @default(0)
  armor           Int            @default(6)
  str             Int            @default(0)
  dex             Int            @default(0)
  wil             Int            @default(0)
  att             Int            @default(0)
  profession      String         @default("")
  appearance      String         @default("")
  physical_detail String         @default("")
  clothing        String         @default("")
  personality     String         @default("")
  mannerism       String         @default("")
  npc             Boolean        @default(true)
  assets          String         @default("")
  liabilities     String         @default("")
  goals           String         @default("")
  misfortunes     String         @default("")
  missions        String         @default("")
  secrets         String         @default("")
  reputations     String         @default("")
  hobbies         String         @default("")
  relationships   Relationship[]
  scenarios       Scenario[]
  items           Item[]
  path            PathInstance[]
}

model Relationship {
  id           Int       @id @default(autoincrement())
  name         String    @default("")
  description  String    @default("")
  character    Character @relation(fields: [character_id], references: [id])
  character_id Int
}

model Path {
  id          Int            @id @default(autoincrement())
  name        String         @default("")
  description String         @default("")
  character   PathInstance[]
}

model PathInstance {
  id           Int       @id @default(autoincrement())
  character    Character @relation(fields: [character_id], references: [id])
  character_id Int
  path         Path      @relation(fields: [path_id], references: [id])
  path_id      Int
  health_lost  Int       @default(0)
}

model Monster {
  id          Int                 @id @default(autoincrement())
  name        String              @unique
  background  String              @default("")
  health_max  Int                 @default(4)
  armor       Int                 @default(6)
  str         Int                 @default(0)
  dex         Int                 @default(0)
  wil         Int                 @default(0)
  size        String              @default("Typical")
  attack      Int                 @default(0)
  tactics     String              @default("")
  personality String              @default("")
  weakness    String              @default("")
  encounter   EncounterInstance[]
}

model EncounterInstance {
  id           Int       @id @default(autoincrement())
  monster      Monster   @relation(fields: [monster_id], references: [id])
  monster_id   Int
  encounter    Encounter @relation(fields: [encounter_id], references: [id])
  encounter_id Int
  health_lost  Int       @default(0)
}

model Encounter {
  id        Int                 @id @default(autoincrement())
  name      String              @unique @default("")
  monsters  EncounterInstance[]
  scenarios Scenario[]
}

model Item {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  description String      @default("")
  value       Int         @default(100)
  scenarios   Scenario[]
  characters  Character[]
}

model Spell {
  id          Int    @id @default(autoincrement())
  name        String @unique
  description String @default("")
  magic       Magic  @relation(fields: [magic_id], references: [id])
  magic_id    Int
}

model Magic {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  description String     @default("")
  medium      String     @default("magic")
  induction   String     @default("")
  spells      Spell[]
  scenarios   Scenario[]
}
